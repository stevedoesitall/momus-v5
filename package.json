{
  "name": "server",
  "main": "build/src/server.js",
  "version": "1.0.0",
  "description": "Momus.io, built with TypeScript and Node.js",
  "scripts": {
    "commit": "npm run build && git init && git status && git add . && git commit -m $MSG && git push origin HEAD:main",
    "build": "rm -rf build && tsc && npm run build:public",
    "start": "node .",
    "dev": "nodemon --watch './**/*.ts' --watch 'tsconfig.json' --exec 'ts-node' --files .",
    "lint": "eslint . --ext .ts --fix",
    "test": "mocha --require ts-node/register --watch-extensions ts components/**/*.test.ts --exit",
    "scss": "sass src/scss/global.scss public/styles/global.css",
    "purge": "purgecss --css public/styles/main.css, public/styles/global.css --content views/**/*.ejs --output public/styles/global.css",
    "copy:views": "mkdir build/views && cp -r views/* build/views",
    "copy:styles": "mkdir build/public/styles && cp -r public/styles/*.css build/public/styles",
    "copy:assets": "mkdir build/public/images && cp -r public/images/* build/public/images",
    "dev:build": "npm run build && npm run dev",
    "bundle:css": "npm run scss && npm run purge && esbuild ./public/styles/global.css --bundle --outfile=./build/public/styles/bundle.css --minify --sourcemap",
    "bundle:js": "esbuild ./build/public/scripts/index.js --bundle --outfile=./build/public/scripts/bundle.js --minify --sourcemap --target=chrome58,firefox57,safari11,edge16 --format=esm",
    "remove:js": "mv build/public/scripts/bundle.js build/public/scripts/bundle.js.keep && rm build/public/scripts/*.js && mv build/public/scripts/bundle.js.keep build/public/scripts/bundle.js",
    "remove:css": "mv build/public/styles/bundle.css build/public/styles/bundle.css.keep && rm build/public/styles/*.css && mv build/public/styles/bundle.css.keep build/public/styles/bundle.css",
    "build:public": "npm run copy:views && npm run copy:assets && npm run copy:styles && npm run bundle:js && npm run bundle:css && npm run remove:js && npm run remove:css"
  },
  "engines": {
    "node": "16.x"
  },
  "author": "Steve Giordano",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "^3.6.0",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "ejs": "^3.1.6",
    "esbuild": "^0.14.5",
    "express": "^4.17.1",
    "helmet": "^4.6.0",
    "morgan": "^1.10.0",
    "purgecss": "^4.1.3",
    "redis": "^4.0.0",
    "sass": "^1.45.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.12",
    "@types/dotenv": "^8.2.0",
    "@types/ejs": "^3.1.0",
    "@types/eslint": "^8.2.0",
    "@types/express": "^4.17.13",
    "@types/mocha": "^9.0.0",
    "@types/morgan": "^1.9.3",
    "@types/node": "^16.11.11",
    "@typescript-eslint/eslint-plugin": "^5.5.0",
    "@typescript-eslint/parser": "^5.5.0",
    "bulma": "^0.9.3",
    "eslint": "^8.3.0",
    "mocha": "^9.1.3",
    "nodemon": "^2.0.15",
    "prisma": "^3.6.0",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.2"
  },
  "eslintConfig": {
    "env": {
      "es2021": true,
      "node": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "plugins": [
      "@typescript-eslint"
    ],
    "ignorePatterns": [
      "build",
      "node_modules",
      "*.js"
    ],
    "rules": {
      "@typescript-eslint/no-var-requires": "off",
      "indent": [
        "error",
        "tab"
      ],
      "linebreak-style": [
        "error",
        "unix"
      ],
      "quotes": [
        "error",
        "double"
      ],
      "semi": [
        "error",
        "always"
      ],
      "no-unused-vars": 0
    }
  }
}
