{
  "name": "server",
  "main": "build/src/bin/server.js",
  "version": "1.0.0",
  "description": "Momus.io, built with TypeScript and Node.js",
  "scripts": {
    "commit": "git init && git status && git add . && git commit -m $MSG && git push origin HEAD:main",
    "build": "ts-node ./src/bin/build.ts",
    "start": "node .",
    "dev": "nodemon --ext 'ts,json,ejs' --exec 'ts-node --files src/bin/server.ts'",
    "build:start": "npm run build && npm run start",
    "lint": "eslint . --ext .ts --fix",
    "format": "prettier --write .",
    "test": "mocha --require ts-node/register --watch-extensions ts components/**/*.test.ts --exit"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint && npm run format && npm run build"
    }
  },
  "engines": {
    "node": "16.x"
  },
  "author": "Steve Giordano",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "^3.6.0",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "ejs": "^3.1.6",
    "esbuild": "^0.14.5",
    "express": "^4.17.1",
    "express-ejs-layouts": "^2.5.1",
    "helmet": "^4.6.0",
    "morgan": "^1.10.0",
    "purgecss": "^4.1.3",
    "redis": "^4.0.0",
    "sass": "^1.45.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.12",
    "@types/dotenv": "^8.2.0",
    "@types/ejs": "^3.1.0",
    "@types/eslint": "^8.2.0",
    "@types/express": "^4.17.13",
    "@types/express-ejs-layouts": "^2.5.0",
    "@types/mocha": "^9.0.0",
    "@types/morgan": "^1.9.3",
    "@types/node": "^16.11.11",
    "@typescript-eslint/eslint-plugin": "^5.5.0",
    "@typescript-eslint/parser": "^5.5.0",
    "bulma": "^0.9.3",
    "eslint": "^8.3.0",
    "eslint-config-prettier": "^8.3.0",
    "husky": "^7.0.4",
    "mocha": "^9.1.3",
    "nodemon": "^2.0.15",
    "prettier": "2.5.1",
    "prisma": "^3.6.0",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.2"
  },
  "prettier": {
    "trailingComma": "none",
    "tabWidth": 2,
    "semi": true,
    "singleQuote": false,
    "quoteProps": "consistent",
    "bracketSpacing": true,
    "bracketSameLine": true,
    "arrowParens": "always"
  },
  "eslintConfig": {
    "env": {
      "es2021": true,
      "node": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "prettier"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "plugins": [
      "@typescript-eslint"
    ],
    "ignorePatterns": [
      "build",
      "node_modules",
      "*.js"
    ],
    "rules": {
      "@typescript-eslint/no-var-requires": "off",
      "linebreak-style": [
        "error",
        "unix"
      ],
      "quotes": [
        "error",
        "double"
      ],
      "semi": [
        "error",
        "always"
      ],
      "no-unused-vars": 0
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/stevedoesitall/momus-v5-api.git"
  },
  "bugs": {
    "url": "https://github.com/stevedoesitall/momus-v5-api/issues"
  },
  "homepage": "https://github.com/stevedoesitall/momus-v5-api#readme"
}
