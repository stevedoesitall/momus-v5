{
  "name": "server",
  "version": "1.0.0",
  "description": "Momus.io API, built in TypeScript and Express.js",
  "scripts": {
    "commit": "git init && git status && git add . && git commit -m $MSG && git push",
    "build": "rm -rf dist && tsc",
    "start": "node dist/src/server.js",
    "dev": "nodemon --watch './**/*.ts' --watch 'tsconfig.json' --exec 'ts-node' --files src/server.ts",
    "lint": "eslint . --ext .ts --fix",
    "test": "mocha --require ts-node/register --watch-extensions ts components/**/*.test.ts --exit"
  },
  "author": "Steve Giordano",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "^3.6.0",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.12",
    "@types/dotenv": "^8.2.0",
    "@types/eslint": "^8.2.0",
    "@types/express": "^4.17.13",
    "@types/mocha": "^9.0.0",
    "@types/morgan": "^1.9.3",
    "@types/node": "^16.11.11",
    "@typescript-eslint/eslint-plugin": "^5.5.0",
    "@typescript-eslint/parser": "^5.5.0",
    "eslint": "^8.3.0",
    "mocha": "^9.1.3",
    "nodemon": "^2.0.15",
    "prisma": "^3.6.0",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.2"
  },
  "eslintConfig": {
    "env": {
      "es2021": true,
      "node": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "plugins": [
      "@typescript-eslint"
    ],
    "ignorePatterns": [
      "dist",
      "node_modules",
      "*.js"
    ],
    "rules": {
      "@typescript-eslint/no-var-requires": "off",
      "indent": [
        "error",
        "tab"
      ],
      "linebreak-style": [
        "error",
        "unix"
      ],
      "quotes": [
        "error",
        "double"
      ],
      "semi": [
        "error",
        "always"
      ],
      "no-unused-vars": 0
    }
  }
}
